<div class="author-form">
  <%= form_with(model: @author, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :bio %>
      <%= form.text_area :bio, class: "form-control", rows: 3 %>
    </div>

    <%= form.submit "Create Author", class: "btn-primary" %>
  <% end %>
</div>
